---
import BaseLayout from '../layouts/baseLayout.astro';
---

<BaseLayout title="Stran ni bila najdena - 404 | Lucka Eventi" description="Stran, ki jo iščete, ni bila najdena. Vrnite se na domačo stran ali uporabite navigacijo.">
  <div class="error-page">
    <div class="container">
      <div class="error-content">
        <h1>404</h1>
        <h2>Ups! Stran ni bila najdena</h2>
        <p>Stran, ki jo iščete, ne obstaja ali je bila premeščena.</p>
        
        <div class="error-actions">
          <a href="/" class="btn btn-primary">Domov</a>
          <a href="/storitve" class="btn btn-secondary">Storitve</a>
          <a href="/contactUs" class="btn btn-secondary">Kontakt</a>
        </div>
        
        <div class="popular-links">
          <h3>Morda vas zanima:</h3>
          <ul>
            <li><a href="/storitve">Naše storitve</a></li>
            <li><a href="/izposoja">Izposoja opreme</a></li>
            <li><a href="/izdelki">Izdelki</a></li>
            <li><a href="/galerija">Galerija</a></li>
            <li><a href="/clanki">Članki in nasveti</a></li>
          </ul>
        </div>
      </div>
      
      <div class="error-image">
        <svg width="400" height="300" viewBox="0 0 400 300" fill="none">
          <rect x="50" y="50" width="300" height="200" rx="20" stroke="#e5e7eb" stroke-width="2"/>
          <circle cx="200" cy="120" r="30" fill="#fee2e2"/>
          <path d="m190 110 20 20m0-20-20 20" stroke="#dc2626" stroke-width="2" stroke-linecap="round"/>
          <text x="200" y="180" text-anchor="middle" class="error-text">Stran ni najdena</text>
        </svg>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    padding: 2rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .error-content h1 {
    font-size: 8rem;
    font-weight: 900;
    color: #2563eb;
    margin: 0;
    line-height: 1;
  }

  .error-content h2 {
    font-size: 2rem;
    color: #1f2937;
    margin: 1rem 0;
  }

  .error-content p {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 2rem;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.2s;
    display: inline-block;
  }

  .btn-primary {
    background: #2563eb;
    color: white;
  }

  .btn-primary:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: transparent;
    color: #2563eb;
    border: 2px solid #2563eb;
  }

  .btn-secondary:hover {
    background: #2563eb;
    color: white;
  }

  .popular-links h3 {
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .popular-links ul {
    list-style: none;
    padding: 0;
  }

  .popular-links li {
    margin: 0.5rem 0;
  }

  .popular-links a {
    color: #2563eb;
    text-decoration: none;
    transition: color 0.2s;
  }

  .popular-links a:hover {
    color: #1d4ed8;
    text-decoration: underline;
  }

  .error-image {
    text-align: center;
  }

  .error-text {
    font-family: Inter, system-ui, sans-serif;
    fill: #6b7280;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .error-content h1 {
      font-size: 6rem;
    }

    .error-actions {
      justify-content: center;
    }

    .error-image svg {
      max-width: 100%;
      height: auto;
    }
  }
</style>